{{!< default}}
{{#post}}
  {{#if image}}
    <div class="post-image js-post-image-wrapper">
      <img src="{{image}}" />
    </div>
  {{/if}}
  <div class="content js-content">
    <div class="page">
      {{#has tag="#video, #tutorial"}}
        {{#has tag="#video"}}
          <div class="post video {{post_class}}">
        {{else}}
          {{#has tag="#tutorial"}}
            <div class="post tutorial {{post_class}}">
          {{/has}}
        {{/has}}
      {{else}}
        <div class="post article {{post_class}}">
      {{/has}}
      <div class="post-header">
        <h1 class="post-title">
          <a href="{{url}}">{{title}}</a>
        </h1>
        
        <ul class="post-meta">
          <li class="author">
            {{#author}}
              <img src="{{image}}" height="25" width="auto" /> 
              {{name}}
            {{/author}}
          </li>
          <li class="date">Published on <span>{{date format="MMMM DD, YYYY"}}</span></li>
          <li class="permalink"><a href="{{url}}">Permalink</a></li>
          <li class="category">{{tags separator=", "}}</li>
        </ul>
      </div>

      <div class="post-content">
        {{content}}
      </div>
    </div>
  </div>
{{/post}}
